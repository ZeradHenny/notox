<style>
    .section-{{section.id}} {
        padding-top: {{section.settings.padding_top}}px;
        padding-bottom: {{section.settings.padding_bottom}}px;
    }
    @media (max-width:746px) {
        .section-{{section.id}} {
            padding-top: {{ section.settings.mobile_padding_top }}px;
            padding-bottom: {{ section.settings.mobile_padding_bottom }}px;
        }
    }
</style>
<div class="section-{{section.id}} hero-banner">
    <div class="heading">
        <h1>{{section.settings.heading}}</h1>
    </div>
    <div class="content">
        {% for block in section.blocks %}
            {%- case block.type -%}
                {% when 'image' %}
                    <img src="{{ block.settings.image | img_url : '360x' }}" alt="banner">
                    <div class="text">
                        <p>{{block.settings.image_text}}
                    </div> 
                {% when 'content' %}
                    <div class="content_text">
                        <h2>{{block.settings.sub_title}}
                        <p>{{block.settings.text}}
                    </div>    
            {% endcase %}     
        {% endfor %}
    </div>
</div>

{% schema %}
    {
        "name": "Hero banner",
        "class": "hero_banner",
        "tag": "section",
        "max_blocks": 5,
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Welcome to Shopify",
                "info": "Letter for heading text",
                "placeholder": "text"
            },
            {
                "type": "color",
                "id": "heading_color",
                "label": "Color",
                "default": "#fff"
            },
            {
                "type": "color",
                "id": "background_color",
                "label": "Background color",
                "default": "#ddd"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding top",
                "default": 50
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 10,
                "unit": "px",
                "label": "Padding bottom",
                "default": 50
            },
            {
                "type": "range",
                "id": "mobile_padding_top",
                "min": 0,
                "max": 50,
                "step": 10,
                "unit": "px",
                "label": "Mobile padding top",
                "default": 20
            },
            {
                "type": "range",
                "id": "mobile_padding_bottom",
                "min": 0,
                "max": 50,
                "step": 10,
                "unit": "px",
                "label": "Mobile padding bottom",
                "default": 20
            }
        ],
        "blocks": [
            {
                "type": "content",
                "name": "content",
                "settings": [
                    {
                        "type": "text",
                        "id": "sub_title",
                        "label": "Sub title",
                        "default": "Introduction",
                        "placeholder": "xxx"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "Text",
                        "default": "<p>I am a Shopify developer</p>"
                    }
                ]
            },
     
            {
                "type": "image",
                "name": "banner image",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "image_text",
                        "label": "Text",
                        "default": "Image for banner"
                    }                    
                ]
            }
        ],
        "presets": [
            {
                "name": "Hero Banner"
            }
        ]
        
    }
{% endschema %}
