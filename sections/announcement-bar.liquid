{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="custom-ann announcement-bar color-{{ block.settings.color_scheme }} gradient" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text_first != blank -%}
          <div class="ann_first stream_text ">         
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
              <div class="page-width">
                {% if block.settings.ann_img_first != blank %}
                  <img class="lazyload" alt="{{ thumbnailAlt }}" data-src="{{ block.settings.ann_img_first | img_url: '350x350'}}"/>
                  {{ block.settings.ann_img_first | img_url: '350x' | img_tag }}
                {% endif %}
                <p class="announcement-bar__message h5">
                  {{ block.settings.text_first | escape }}
                  {%- if block.settings.link != blank -%}
                    {% render 'icon-arrow' %}
                  {%- endif -%}
                </p>
              </div>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%} 
          </div>
        {%- endif -%}
        {%- if block.settings.text_sec != blank -%}
          <div class="ann_sec stream_text stream_text-delay">
          
          {%- if block.settings.link != blank -%}
            <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow">
          {%- endif -%}
              <div class="page-width">
                {% if block.settings.ann_img_sec != blank %}
                  {{ block.settings.ann_img_sec | img_url: '350x' | img_tag }}
                {% endif %}
                <p class="announcement-bar__message  h5" style="color:{{ block.settings.text_color }}">
                  {{ block.settings.text_sec | escape }}
                  {%- if block.settings.link != blank -%}
                    {% render 'icon-arrow' %}
                  {%- endif -%}
                </p>
              </div>
          {%- if block.settings.link != blank -%}
            </a>
          {%- endif -%}
          </div>
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}
<style>
  @media (max-width: 746px) {
 
    .stream_text {
      position: absolute;
      padding-left: 100%;
      white-space: nowrap;
      font-size: 30px;
      text-transform: uppercase;
      animation: stream 15s linear infinite;
    }
     
  
  .stream_text-delay{
    color: #7818d9;
    animation-delay: 2.5s;
  
  }
   
  
  @keyframes stream {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
    
  }
</style>
{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "ann_img_first",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text_first",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "image_picker",
          "id": "ann_img_sec",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text_sec",
          "default": "Welcome to our store",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },

        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "accent-1",
              "label": "t:sections.all.colors.accent_1.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.all.colors.accent_2.label"
            },
            {
              "value": "background-1",
              "label": "t:sections.all.colors.background_1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.all.colors.background_2.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.all.colors.inverse.label"
            }
          ],
          "default": "accent-1",
          "label": "t:sections.all.colors.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
